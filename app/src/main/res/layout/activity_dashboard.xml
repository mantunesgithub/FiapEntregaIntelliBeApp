<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="10dp"
    tools:context=".EnviarDashBoard">

    <ImageView
        android:id="@+id/imageViewFoto"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:scaleType="fitStart"
        app:layout_constraintBottom_toTopOf="@+id/txv_bem_vindo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/foto_marcio" />

    <TextView
        android:id="@+id/txv_bem_vindo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:text="Seja bem Vindo(a)!"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/imageViewFoto"
        app:layout_constraintTop_toBottomOf="@+id/imageViewFoto" />

    <TextView
        android:id="@+id/txv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="E-mail:"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/txv_bem_vindo"
        app:layout_constraintTop_toBottomOf="@+id/txv_bem_vindo" />

    <TextView
        android:id="@+id/txv_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/txv_email"
        app:layout_constraintTop_toBottomOf="@id/txv_email" />

    <TextView
        android:id="@+id/txv_cnpttx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Cnpj: "
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/txv_usuario"
        app:layout_constraintTop_toBottomOf="@+id/txv_usuario" />
    <TextView
        android:id="@+id/txv_cnpj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/txv_cnpttx"
        app:layout_constraintTop_toBottomOf="@+id/txv_cnpttx" />

    <TextView
        android:id="@+id/txv_teste_realiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="52dp"
        android:text="Testes Realizados no Mês"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/txv_cnpj"
        app:layout_constraintTop_toBottomOf="@+id/txv_cnpj" />

    <TextView
        android:id="@+id/txv_total_teste_realiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/txv_teste_realiz"
        app:layout_constraintTop_toBottomOf="@id/txv_teste_realiz" />

    <EditText
        android:id="@+id/txv_formulario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Formulários"
        android:textAlignment="viewStart"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txv_total_teste_realiz" />

    <Button
        android:id="@+id/btn_listar_form"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="12dp"
        android:text="Listar"
        android:textAllCaps="false"
        app:layout_constraintEnd_toStartOf="@+id/btn_cadastrar_form"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txv_formulario"
        app:layout_constraintTop_toBottomOf="@+id/txv_formulario"
        tools:visibility="visible" />

    <Button
        android:id="@+id/btn_cadastrar_form"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="17dp"
        android:text="Cadastrar"
        android:textAllCaps="false"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/btn_excluir_form"
        app:layout_constraintStart_toStartOf="@+id/txv_formulario"
        app:layout_constraintTop_toBottomOf="@+id/txv_formulario" />
        tools:text="Cadastrar" />

    <Button
        android:id="@+id/btn_excluir_form"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:text="Excluir"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/txv_formulario"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="@+id/txv_formulario"
        app:layout_constraintTop_toBottomOf="@+id/txv_formulario" />

    <Button
        android:id="@+id/btn_notificacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="112dp"
        android:onClick="gerarNotificacao"
        android:text="Notificações"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="@+id/btn_listar_form"
        app:layout_constraintTop_toBottomOf="@+id/btn_listar_form" />

</androidx.constraintlayout.widget.ConstraintLayout>
